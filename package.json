{
    "name": "wechat-scheduler",
    "version": "1.0.0",
    "description": "微信公众号定时服务 - 基于Coze API的自动化定时任务系统",
    "main": "wechat-scheduler.js",
    "scripts": {
        "start": "node wechat-scheduler.js",
        "dev": "nodemon wechat-scheduler.js",
        "pm2:start": "pm2 start ecosystem.config.js",
        "pm2:stop": "pm2 stop wechat-scheduler",
        "pm2:restart": "pm2 restart wechat-scheduler",
        "pm2:delete": "pm2 delete wechat-scheduler",
        "docker:build": "docker build -t wechat-scheduler .",
        "docker:run": "docker run -d --name wechat-scheduler --env-file .env wechat-scheduler",
        "docker:logs": "docker logs -f wechat-scheduler",
        "test": "echo \"No test specified - skipping tests\"",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "format": "prettier --write .",
        "format:check": "prettier --check ."
    },
    "lint-staged": {
        "*.js": [
            "eslint --fix",
            "prettier --write"
        ]
    },
    "keywords": [
        "wechat",
        "scheduler",
        "coze",
        "cron",
        "automation",
        "nodejs"
    ],
    "author": "Your Name",
    "license": "MIT",
    "dependencies": {
        "axios": "^1.6.0",
        "dotenv": "^16.3.1",
        "node-cron": "^3.0.3",
        "winston": "^3.11.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^20.3.0",
        "@commitlint/config-conventional": "^20.3.0",
        "eslint": "^8.54.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "husky": "^8.0.3",
        "lint-staged": "^15.5.2",
        "nodemon": "^3.0.1",
        "pm2": "^5.3.0",
        "prettier": "^3.1.0"
    },
    "engines": {
        "node": ">=16.0.0",
        "npm": ">=8.0.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/yourusername/wechat-scheduler.git"
    },
    "bugs": {
        "url": "https://github.com/yourusername/wechat-scheduler/issues"
    },
    "homepage": "https://github.com/yourusername/wechat-scheduler#readme"
}
